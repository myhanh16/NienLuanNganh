<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lí sự kiện</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    
    <header class="header">
        <!-- Load an icon library -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <div class="navbar">
            <a href="/homeadmin" class="logo">
                <img src="/img/logo.png" alt="Logo">
            </a>
            <div class="links">
                <a class="active" href="/homeadmin"><i class="fa fa-fw fa-home"></i>Trang Chủ</a>
                <a href="/browse_event" class=""><i class="fa fa-fw fa-check-square"></i>Duyệt Sự Kiện</a>
                <a href="/"><i class="fa fa-fw fa-group"></i>Quản Lý Người Dùng</a>
                <!-- <a href="/about"><i class="fa fa-fw fa-vcard"></i>Về Chúng Tôi</a>  -->
                <% if (session.user) { %>
                    <a href="/logout"><i class="fa fa-fw fa-sign-out"></i>Đăng Xuất</a>
                <% } else { %>
                    <div class="dropdown">
                        <p class="dropbtn">Đăng Nhập
                          <i class="fa fa-caret-down"></i>
                        </p>
                        <div class="dropdown-content">
                          <a href="/login">Đăng Nhập</a>
                          <a href="/register">Đăng Ký</a>
                        </div>
                      </div>
                <% } %>
            </div>
            
            <div class="account-icon-container">
                <% if (session.user) { %>
                    <i class="fa fa-fw fa-user-circle account-icon">
                        <p class="username"><%= session.user.UserName %></p>
                    </i>
                <% } else { %>
                    <i class="fa fa-fw fa-user-circle account-icon">
                        <p class="username">Tài Khoản</p>
                    </i>
                <% } %>
            </div>
            
        </div>
    </header>

    <div class="banner">
        <img src="/img/banner.jpg" alt="Header Image">
        <!-- Thanh tìm kiếm đặt chồng lên banner -->
        <!-- <div class="search-container">  -->
            <form action="/search" method="GET" class="search-container">
                <input type="text" name="event" placeholder="Nhập sự kiện cần tìm" id="event">
                <button  type="submit"><i class="fa fa-fw fa-search"></i></button>
            </form>
        <!-- </div> -->
    </div>

    <div class="filter-container">
        <select id="event-type" name="event_type">
            <option value="">Chọn loại sự kiện</option>
            <option value="1">Âm nhạc</option>
            <option value="2">Hoạt động nhóm</option>
            <option value="3">Chương trình trò chuyện</option>
        </select>
    </div>

    <div class="product-grid">
        <% event.forEach(function(ev) { %>
            <div class="product-item">
                <!-- <div class="heart-icon">
                    <i class="fa fa-heart" id="heart-icon-<%= ev.ID_Event %>" name="ID_Event" onclick="registerEvent('<%= ev.ID_Event  %>')" method="post"></i>
                </div> -->
                <img src="<%= ev.Image_URL %>" alt="Event Image">
                <h3><%= ev.Name %></h3>
                <p>Thời gian:<div style="color: gray;"><%= ev.Start_time %> - <%= ev.End_time %></div></p>
                <p>Địa điểm: <div style="color: gray;"><%= ev.Location %></div></p>
                <p>Giá vào cổng:<div style="color: gray;"><%= ev.Price %></div></p>
                <p>Chi tiết:<div style="color: gray;"><%= ev.Description %></div></p>
                <!-- <p><a href="/event/<%= ev.ID_Event %>">Xem chi tiết</a></p> -->
                <div class="max">
                    <p><i class="fa fa-fw fa-user icon"><%= ev.Max_Participants -  (ev.Participant_Count) %>/<%= ev.Max_Participants %></i></p>
                </div>
            </div>
        <% }); %>
    </div>
    
    <script src="/js/main.js"></script>
    
    
</body>
</html>
